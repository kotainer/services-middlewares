{
    "version": "3.7.4",
    "compilerOptions": {
        "outDir": "./lib",
        "lib": ["ES5", "ES6", "ES7"],
        "target": "ES6",
        "module": "commonjs",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "strict": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true
    },
    "include": ["./src/**/*"]
}